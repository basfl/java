<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs533.assignment4.basoltanifar.android.MainActivity" >

     <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Please choose your file" />   

    <Button
        android:id="@+id/insert"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="1000in"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:text="Insert" />

    <EditText
        android:id="@+id/qn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/insert"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:inputType="numberDecimal" />

      <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/qn"
        android:layout_centerHorizontal="true"
        android:text="Please enter number of questions you want!!" />

      <Button
          android:id="@+id/fileInsert"
          style="?android:attr/buttonStyleSmall"
          android:layout_width="1000in"
          android:layout_height="wrap_content"
          android:layout_above="@+id/textView2"
          android:layout_alignLeft="@+id/textView2"
          android:layout_marginBottom="30dp"
          android:text="Insert File Path" />

       <EditText
          android:id="@+id/filePathTextEditor"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/qn"
          android:layout_below="@+id/textView1"
          android:ems="10" >      

          <requestFocus />
      </EditText>

      <Spinner
          android:id="@+id/spinner1"
          android:layout_width="1000in"
          android:layout_height="wrap_content"
          android:layout_above="@+id/fileInsert"
          android:layout_alignRight="@+id/filePathTextEditor" />
<!--  -->

</RelativeLayout>